window.catchingErrors = function(topic, date, fn) {
  <% if development? %>
    try {
      fn();
    } catch(e) {
      console.warn(e);
      console.warn(e.stack);
      alert(e);
  }
  <% else %>
    Raven.wrap({ tags: { date: date, topic: topic }}, fn)();
  <% end %>
};

